{"components/cart/gift-wrap-modal":"<a href=\"#\" class=\"modal-close pxu-close-thin\"></a>\n\n<form class=\"gift-wrap-form\" action=\"{{urls.cart}}\" method=\"post\">\n  <input type=\"hidden\" name=\"action\" value=\"save_giftwrapping\">\n  <input type=\"hidden\" name=\"item_id\" value=\"{{item_id}}\">\n\n  <h3 class=\"gift-wrap-heading\">{{lang 'cart.gift_wrapping.heading'}}</h3>\n\n  {{#if quantity \"!==\" 1}}\n    <div class=\"form-field form-inline\">\n      <label class=\"form-label\" for=\"gift-wrap-radio-same\">\n        <input class=\"form-input input-radio\" type=\"radio\" name=\"giftwraptype\" id=\"gift-wrap-radio-same\" checked=\"checked\" value=\"same\">\n        <span class=\"form-input-mask\"></span>\n        <span class=\"form-label-text\">{{lang 'cart.gift_wrapping.option_same'}}</span>\n      </label>\n\n      <label class=\"form-label\" for=\"gift-wrap-radio-all\">\n        <input class=\"form-input input-radio\" type=\"radio\" name=\"giftwraptype\" id=\"gift-wrap-radio-all\" value=\"different\">\n        <span class=\"form-input-mask\"></span>\n        <span class=\"form-label-text\">{{lang 'cart.gift_wrapping.option_different'}}</span>\n      </label>\n    </div>\n  {{/if}}\n\n  <div class=\"gift-wrap-single visible\">\n    {{> components/cart/gift-wrap-option-item quantity=quantity gift_wrappings=gift_wrappings selected_wrapping=selected_wrapping index=\"all\"}}\n  </div>\n\n  {{#if quantity \">\" 1}}\n    <div class=\"gift-wrap-multiple\">\n      <div class=\"gift-wrap-multiple-scroll-container\">\n        {{#for quantity this}}\n          {{> components/cart/gift-wrap-option-item quantity=quantity gift_wrappings=gift_wrappings selected_wrapping=selected_wrapping index=$index}}\n        {{/for}}\n      </div>\n    </div>\n  {{/if}}\n\n  <div class=\"form-field\">\n    <button class=\"button button-primary button-small\">{{lang 'cart.gift_wrapping.apply'}}</button>\n  </div>\n</form>\n","components/cart/gift-wrap-option-item":"<div class=\"gift-wrap-option-item\" id=\"gift-wrap-option-item-{{index}}\">\n  <div class=\"form-field\">\n    <label class=\"form-label\" for=\"giftWrapping-select-same\">\n      <span class=\"form-label-text\">\n        {{#if quantity \"==\" 1}}\n          {{lang 'cart.gift_wrapping.item_only'}}\n        {{else}}\n          {{#if index \"==\" \"all\"}}\n            {{lang 'cart.gift_wrapping.item_single'}}\n          {{else}}\n            {{lang 'cart.gift_wrapping.item_multiple' index=index}}\n          {{/if}}\n        {{/if}}\n      </span>\n      <select class=\"form-input form-select gift-wrap-select\" name=\"giftwrapping[{{index}}]\" id=\"giftWrapping-select-same\" data-index=\"{{index}}\">\n        <option value=\"\">{{lang 'cart.gift_wrapping.choose_type'}}</option>\n        {{#each gift_wrappings}}\n          <option {{#if selected}}selected{{/if}} value=\"{{id}}\" data-allow-message=\"{{allow_message}}\" data-preview-image=\"{{#if preview_image}}true{{else}}false{{/if}}\">{{name}} - ({{price.formatted}})</option>\n        {{/each}}\n      </select>\n    </label>\n  </div>\n\n  {{#each gift_wrappings}}\n    {{#if preview_image}}\n      <div class=\"form-field gift-wrap-image-preview image-preview-{{id}}\">\n        <div class=\"gift-wrap-image-label\">\n          {{lang 'cart.gift_wrapping.preview'}}\n          <div class=\"gift-wrap-hover-for-preview\">\n            {{lang 'cart.gift_wrapping.hover_for_preview'}}\n          </div>\n        </div>\n        <a class=\"gift-wrap-image\" href=\"{{getImage preview_image}}\" target=\"_blank\" style=\"background-image: url({{getImage preview_image}})\">\n          <img src=\"{{getImage preview_image}}\" alt=\"{{name}}\">\n        </a>\n      </div>\n    {{/if}}\n  {{/each}}\n\n  <div class=\"form-field gift-wrap-message\" data-gift-wrap-message=\"{{index}}\">\n    <label class=\"form-label\" for=\"giftMessage\">\n      <span class=\"form-label-text\">{{lang 'cart.gift_wrapping.gift_message'}}</span>\n      <textarea class=\"form-input\" name=\"giftmessage[{{index}}]\" id=\"giftMessage\" rows=\"3\">{{selected_wrapping.message}}</textarea>\n    </label>\n  </div>\n</div>\n"}